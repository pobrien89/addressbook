<h1>Editing addressbook</h1>

<%= error_messages_for :addressbook %>

<% form_for(@addressbook) do |f| %>
  <p>
    <b>Firstname</b><br />
    <%= f.text_field :FirstName %>
  </p>

  <p>
    <b>Lastname</b><br />
    <%= f.text_field :LastName %>
  </p>

  <p>
    <b>Addressline1</b><br />
    <%= f.text_field :AddressLine1 %>
  </p>

  <p>
    <b>Addressline2</b><br />
    <%= f.text_field :AddressLine2 %>
  </p>

  <p>
    <b>Addrssline3</b><br />
    <%= f.text_field :AddrssLine3 %>
  </p>

  <p>
    <b>Phone</b><br />
    <%= f.text_field :Phone %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :Description %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @addressbook %> |
<%= link_to 'Back', addressbooks_path %>
